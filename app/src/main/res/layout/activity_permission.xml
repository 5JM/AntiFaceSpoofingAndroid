<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PermissionActivity"
    >
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="50dp"
        android:text="권한 안내"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/permission_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이용중이신 앱은 아래 권한들을 필요로 합니다.\n서비스 사용 중 앱에서 요청 시 허용해주세요."
        android:textSize="13sp"
        android:lines="2"
        android:layout_alignStart="@id/title"
        android:layout_below="@+id/title"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/danger_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_alignStart="@id/title"
        android:lines="1"
        android:text="필수 접근 권한"
        android:textStyle="bold"
        android:textColor="@color/cubox_sky"
        android:textSize="17sp"
        android:layout_below="@+id/permission_guide" />

    <LinearLayout
        android:id="@+id/danger_per1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/danger_permission"
        android:layout_alignStart="@id/danger_permission"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_photo_camera_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="마이크"
            android:textStyle="bold"
            android:textSize="13sp"
            android:maxLines="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="카메라 사용을 위해 권한이 필요합니다.( 신분증 촬영 및 얼굴 촬영 )"
            android:textSize="13sp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/danger_per1"
        android:layout_alignStart="@id/danger_permission"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_perm_device_information_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="기기ID"
            android:textStyle="bold"
            android:textSize="13sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="디바이스 상태 및 ID 읽기"
            android:textSize="13sp"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/permissionGuideButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/cubox_sky"
        android:gravity="center"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="17sp" />
</RelativeLayout>
